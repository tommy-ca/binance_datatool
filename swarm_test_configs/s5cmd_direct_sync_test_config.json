{
  "test_name": "S5cmd Direct Sync Workflow Performance Test",
  "test_type": "s5cmd_direct_sync",
  "version": "2.1.0",
  "description": "Performance test for S3 to S3 direct sync functionality using s5cmd",
  
  "workflow_config": {
    "workflow_type": "archive_samples",
    "markets": ["spot"],
    "symbols": ["BTCUSDT", "ETHUSDT"],
    "data_types": ["klines"],
    "intervals": ["1m", "5m", "1h"],
    "date_range": {
      "start_date": "2025-07-15",
      "end_date": "2025-07-15"
    },
    
    "enable_s3_direct_sync": true,
    "operation_mode": "direct_sync",
    "destination_bucket": "test-crypto-lakehouse-bronze",
    "destination_prefix": "swarm-test/s5cmd-direct-sync",
    "sync_mode": "copy",
    "enable_incremental": false,
    
    "performance_optimization": {
      "max_concurrent": 16,
      "batch_size": 100,
      "part_size_mb": 50,
      "retry_count": 3
    },
    
    "s3_config": {
      "region": "us-east-1",
      "storage_class": "STANDARD"
    },
    
    "base_output_dir": "output/swarm-test-s5cmd-direct-sync",
    "dry_run": false,
    "verbose": true
  },
  
  "test_parameters": {
    "expected_file_count": 6,
    "test_iterations": 3,
    "warmup_runs": 1,
    "timeout_seconds": 300,
    "performance_targets": {
      "max_processing_time_seconds": 90,
      "min_improvement_percent": 50,
      "max_memory_usage_mb": 200,
      "min_success_rate_percent": 95
    }
  },
  
  "monitoring": {
    "enable_performance_tracking": true,
    "enable_detailed_logging": true,
    "metrics_collection_interval": 5,
    "log_level": "INFO",
    "collect_system_metrics": true
  },
  
  "validation": {
    "enable_checksum_validation": true,
    "enable_size_verification": true,
    "enable_transfer_verification": true,
    "validate_s5cmd_availability": true
  },
  
  "metadata": {
    "test_environment": "swarm",
    "agent_type": "s5cmd-direct-sync-tester",
    "test_framework": "claude-flow-swarm",
    "created_date": "2025-07-20",
    "test_objectives": [
      "Measure S5cmd direct sync performance",
      "Validate 60%+ improvement claims",
      "Test batch processing efficiency",
      "Verify memory usage optimization",
      "Validate error handling and recovery"
    ]
  }
}