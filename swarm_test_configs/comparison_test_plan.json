{
  "test_plan_name": "S5cmd Direct Sync vs Original Workflow Comparison",
  "test_plan_version": "1.0.0",
  "description": "Comprehensive comparison test plan for evaluating S5cmd direct sync performance against original archive collection workflow",
  
  "test_strategy": {
    "approach": "parallel_execution",
    "methodology": "controlled_comparison",
    "statistical_significance": "3_iterations_minimum",
    "environment": "isolated_swarm_agents"
  },
  
  "test_scenarios": [
    {
      "scenario_id": "small_dataset",
      "description": "Small dataset test (6 files, ~150MB)",
      "file_count": 6,
      "estimated_size_mb": 150,
      "symbols": ["BTCUSDT", "ETHUSDT"],
      "intervals": ["1m", "5m", "1h"],
      "expected_duration_traditional": "120-180 seconds",
      "expected_duration_direct_sync": "45-70 seconds"
    },
    {
      "scenario_id": "medium_dataset",
      "description": "Medium dataset test (24 files, ~600MB)",
      "file_count": 24,
      "estimated_size_mb": 600,
      "symbols": ["BTCUSDT", "ETHUSDT", "BNBUSDT", "ADAUSDT"],
      "intervals": ["1m", "5m", "15m", "1h", "4h", "1d"],
      "expected_duration_traditional": "480-720 seconds",
      "expected_duration_direct_sync": "180-280 seconds"
    }
  ],
  
  "comparison_metrics": [
    {
      "metric_name": "total_processing_time",
      "unit": "seconds",
      "measurement_precision": 0.1,
      "target_improvement": "≥60%",
      "critical_threshold": "≥50%"
    },
    {
      "metric_name": "operations_per_file",
      "unit": "count",
      "measurement_precision": 1,
      "target_improvement": "≥80% reduction",
      "baseline_value": 5
    },
    {
      "metric_name": "memory_usage_peak",
      "unit": "MB",
      "measurement_precision": 1,
      "target_improvement": "≥70% reduction",
      "baseline_range": "500-1000 MB"
    },
    {
      "metric_name": "local_storage_required",
      "unit": "MB",
      "measurement_precision": 1,
      "target_improvement": "100% elimination",
      "baseline_value": "file_size * concurrent_downloads"
    },
    {
      "metric_name": "network_bandwidth_usage",
      "unit": "MB",
      "measurement_precision": 1,
      "target_improvement": "≥50% reduction",
      "baseline_multiplier": 2.0
    },
    {
      "metric_name": "success_rate",
      "unit": "percentage",
      "measurement_precision": 0.1,
      "target_improvement": "≥2 percentage points",
      "baseline_target": "≥95%"
    },
    {
      "metric_name": "error_recovery_time",
      "unit": "seconds",
      "measurement_precision": 0.1,
      "target_improvement": "≥30% faster",
      "baseline_range": "30-60 seconds"
    }
  ],
  
